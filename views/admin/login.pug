		script(src='/admin/custom/login.js')

		script.
			let responseAdmin = !{JSON.stringify(responseAdmin)};
			$('.flash-messages').delay(2100).hide('slow');
			$('.otp_section').hide();
			$('.has-spinner').click(function() {
					$(this).toggleClass('active');
			});
			$('.resend_otp').hide();

			// SWAl
			function swalFeature() {
				var SweetAlert2Demo = function () {
					//== Demos
					var initDemos = function () {
						swal("Please wait...", {
							buttons: false,
							timer: 12000,
							backdrop:true,
							closeOnClickOutside: false,
							closeOnEsc: false
						})
					};

					return {
							//== Init
							init: function () {
								initDemos();
							},
						};
					}();

				jQuery(document).ready(function () {
					SweetAlert2Demo.init();
				});
			}

			function signIn () {
				//- console.log($.trim($('#username').val()));
				function validateEmail($email) {
					var emailReg = /^([a-zA-Z0-9._%+-]+)@([a-zA-Z0-9.-]+\.[a-z]{2,6})$/;
					return emailReg.test( $email );
				}
				if ($.trim($('#username').val()) == '') {
					$.notify({
						message: responseAdmin.EMAIL_VALIDATION_ADMIN
					},{
						type: 'error',
						showProgressbar: false
					},
					{
						offset: 20,
						spacing: 10,
						z_index: 1031,
						delay: 5000,
						timer: 1200
					});
					return false;
				}
				if ($.trim($('#password').val()) == '') {
					$.notify({
						message: responseAdmin.PASSWORD_VALIDATION_ADMIN
					},{
						type: 'error',
						showProgressbar: false
					},
					{
						offset: 20,
						spacing: 10,
						z_index: 1031,
						delay: 5000,
						timer: 1200
					});
					return false;
				}
				if (!validateEmail($.trim($('#username').val()))) {
					$.notify({
						message: responseAdmin.VALID_EMAIL_ADMIN
					},{
						type: 'error',
						showProgressbar: false
					},
					{
						offset: 20,
						spacing: 10,
						z_index: 1031,
						delay: 5000,
						timer: 1200
					});
					return false;
				}

				// SWAL
				swalFeature();

				// OTP FEATURE
				function handleOtp(e) {
					const input = e.target;
					let value = input.value;
					let isValidInput = value.match(/[0-9]/gi);
					input.value = "";
					input.value = isValidInput ? value[0] : "";

					let fieldIndex = input.dataset.index;
					if (fieldIndex < inputs.length - 1 && isValidInput) {
							input.nextElementSibling.focus();
					}

					if (e.key === "Backspace" && fieldIndex > 0) {
							input.previousElementSibling.focus();
					}

					if (fieldIndex == inputs.length - 1 && isValidInput) {
							submit();
					}
				}

				function handleOnPasteOtp(e) {
					const data = e.clipboardData.getData("text");
					const value = data.split("");
					if (value.length === inputs.length) {
							inputs.forEach((input, index) => (input.value = value[index]));
							submit();
					}
				}

				function submit() {
						swalFeature();
						console.log("Submitting...");
						// ðŸ‘‡ Entered OTP
						let otp = "";
						inputs.forEach((input) => {
								otp += input.value;
								input.disabled = true;
								input.classList.add("disabled");
						});
						//- console.log(otp);
						//- console.log('email--', $.trim($('#username').val()));
						// ðŸ‘‰ Call API below
						$.ajax({
							type: 'POST',
							url: `/admin/account/loginwithotp`,
							data: {
								email: $.trim($('#username').val()),
								otp
							},
							success: function(result) {
								//- console.log(result);
								if (result.code == 500) {
									swal.close();
									$.notify({
										message: result.message
									},{
										type: 'error',
										showProgressbar: false
									},
									{
										offset: 20,
										spacing: 10,
										z_index: 1031,
										delay: 5000,
										timer: 1200
									});
									$('.custom').val('');
									inputs.forEach((input) => {
										input.disabled = false;
										input.classList.remove("disabled");
									});
									$('#otp_1').focus();
									return false;
								} else if (result.code == 200) {
									swal.close();
									$.notify({
										message: result.message
									},{
										type: 'success',
										showProgressbar: false
									},
									{
										offset: 20,
										spacing: 10,
										z_index: 1031,
										delay: 5000,
										timer: 1200
									});
									window.location.replace("/admin/dashboard");
									return;
								}
							}
						})
				}

				const inputs = document.querySelectorAll(".otp-field input");
				inputs.forEach((input, index) => {
					input.dataset.index = index;
					input.addEventListener("keyup", handleOtp);
					input.addEventListener("paste", handleOnPasteOtp);
				});


				$.ajax({
					type: 'POST',
					url: `/admin/account/login`,
					data: {
						email: $.trim($('#username').val()),
						password: $.trim($('#password').val())
					},
					success: function(result) {
						//- console.log(result);
						//- return;
						if (result.code == 404) {
							swal.close();
							$.notify({
								message: result.message
							},{
								type: 'error',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							return false;
						} else if (result.code == 500) {
							swal.close()
							$.notify({
								message: result.message
							},{
								type: 'error',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							return false;
						} else if (result.code == 401) {
							swal.close();
							var SweetAlert2Demo = function () {
							//== Demos
								var initDemos = function () {
									swal("You haven't changed your password for more than 90 days. Please update your password immediately.", {
										//- buttons: false,
										showDenyButton: true,
										allowOutsideClick: false,
										timer: 20000,
										backdrop:true,
										closeOnClickOutside: false,
										closeOnEsc: false
									}).then((success) => {
											swal.close();
											window.open(`/admin/account/passwordexpire?src_change=${result.data.user_id}`, '_blank');
											return;
										})
								};

							return {
									//== Init
									init: function () {
										initDemos();
									},
								};
							}();

							jQuery(document).ready(function () {
								SweetAlert2Demo.init();
							});
							return;
							//- console.log(result);
							//- window.open(`/admin/account/passwordexpire?src_change=${result.data.user_id}`, '_blank');
							//- return;
						} else if (result.code == 202) {
							//- console.log('result -----', result);
							swal.close();
							$('.otp_section').show('slow');
							$('#otp_1').focus();
							$('.has-spinner').hide();
							$('.username').hide();
							$('.password').hide();
							$('.sign_in_text').text("Sign in with OTP!");
							var timeleft = 15;
							var downloadTimer = setInterval(function(){
								timeleft--;
								document.getElementById("countdowntimer").textContent = ` ${timeleft}`;
								if(timeleft <= 0) {
									//- console.log('ZERO ho gaya hai');
									clearInterval(downloadTimer);
									$('.timer_otp').hide();
									$('.resend_otp').show();
								}
							},1000);
							return;
						} else if (result.code == 200) {
							swal.close()
							$.notify({
								message: result.message
							},{
								type: 'success',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							window.location.replace("/admin/dashboard");
							return;
						}
					}
				})

				//- $(document).on("keyup", ".custom", function () {
				//- 	var val = $(this).val();
				//- 	if(isNaN(val)){
				//- 			val = val.replace(/[^0-9\.]/g,'');
				//- 			if(val.split('.').length>2)
				//- 					val =val.replace(/\.+$/,"");
				//- 	}
				//- 	$(this).val(val);
				//- })
			}

			function resentOTP () {
				swalFeature();
				$.ajax({
					type: 'POST',
					url: `/admin/account/resendotp`,
					data: {
						email: $.trim($('#username').val()),
					},
					success: function(result) {
						swal.close();
						//- console.log(result);
						if (result.code == 404) {
							swal.close()
							$.notify({
								message: result.message
							},{
								type: 'error',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							return false;
						} else if (result.code == 500) {
							swal.close()
							$.notify({
								message: result.message
							},{
								type: 'error',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							return false;
						} else if (result.code == 202) {
							//- console.log('result -----', result);
							swal.close();
							$('.custom').val('');
							$('#otp_1').focus();
							$('.timer_otp').show();
							$('.resend_otp').hide();

							var timeleft = 15;
							var downloadTimer = setInterval(function(){
								timeleft--;
								document.getElementById("countdowntimer").textContent = ` ${timeleft}`;
								if(timeleft <= 0) {
									//- console.log('ZERO ho gaya hai');
									clearInterval(downloadTimer);
									$('.timer_otp').hide();
									$('.resend_otp').show();
								}
							},1000);

							return;
						} else if (result.code == 200) {
							swal.close()
							$.notify({
								message: result.message
							},{
								type: 'success',
								showProgressbar: false
							},
							{
								offset: 20,
								spacing: 10,
								z_index: 1031,
								delay: 5000,
								timer: 1200
							});
							window.location.replace("/admin/dashboard");
							return;
						}
					}
				})
			}