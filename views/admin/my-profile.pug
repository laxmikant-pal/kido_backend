extends layout-admin

block content
  .main-panel
    .container
      .panel-header.bg-primary-gradient
        .page-inner.py-5
          .d-flex.align-items-left.align-items-md-center.flex-column.flex-md-row
            div
              h2.text-white.pb-2.fw-bold My Profile
              h5.text-white.op-7.mb-2 Welcome to Admin Panel
            .ml-md-auto.py-2.py-md-0
              //- a.btn.btn-white.btn-border.btn-round.mr-2(href='/admin/employee/all') All User
              a.btn.btn-white.btn-border.btn-round.mr-2(href='/admin/dashboard') Dashboard
      .page-inner
        .row
          .col-md-12
            .card
              //- pre= h.dump(employee)
              if employee && employee.main && employee.main == "super_admin"
                form(action=``)
                  .card-body
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                        | First Name
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='text', placeholder='Enter First Name', required='' value=employee.first_name disabled)
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                        | Last Name
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='text', placeholder='Enter Last Name', required='' value=employee.last_name disabled)
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='email')
                        | Email Address
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#email.form-control(type='email', placeholder='Enter Email', value=employee.email, required='', disabled)
                        //- small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='Mobile No.')
                        | Mobile No.
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='number', placeholder='Enter Mobile No.', value=employee.mobile, required="" disabled)
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                        | Type
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='text', placeholder='Enter First Name', required='' value="Super Admin" disabled)
              else
                form(action=``)
                  .card-body
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                        | First Name
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='text', placeholder='Enter First Name', required='' value=employee.first_name disabled)
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                        | Last Name
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='text', placeholder='Enter Last Name', required='' value=employee.last_name disabled)
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='email')
                        | Email Address
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#email.form-control(type='email', placeholder='Enter Email', value=employee.email, required='' disabled)
                        //- small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
                    .form-group.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='Mobile No.')
                        | Mobile No.
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        input#name.form-control(type='number', autocomplete="off", placeholder='Enter Mobile No.', value=employee.mobile, required="" disabled)
                    //- .form-group.form-show-validation.row
                    //-   label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='user_type')
                    //-     | User Type
                    //-   .col-lg-7.col-md-9.col-sm-8
                    //-     .select2-input
                    //-       select#state.form-control(name='user_type', required='')
                    //-         option(value='user') User
                    //-         option(value='admin') Admin
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='role_type')
                        | Role Type
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        .select2-input
                          select#role.form-control(required='', disabled)
                            option(value='') --- Select Role ---
                            each role in roles
                              option(value=role._id selected=(role._id.toString() === roleAssign.role_id.toString())) #{role.name}
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='role_type')
                        | Country(s)
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        .select2-input
                          input#country.form-control(type='text', value=(employee.country_id && employee.country_id.length ? employee.country_id.map(country => `${country.country_name}`).join(", ") : "Not Provided") disabled)
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='role_type')
                        | Zone(s)
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        .select2-input
                          input#zone.form-control(type='text', value=(employee.zone_id && employee.zone_id.length ? employee.zone_id.map(zone => `${zone.name}`).join(", ") : "Not Provided") disabled)
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='role_type')
                        | Center(s)
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        .select2-input
                          input#center.form-control(type='text', value=(employee.center_id && employee.center_id.length ? employee.center_id.map(center => `${center.school_display_name}`).join(", ") : "Not Provided") disabled)
                    .form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='country_id')
                        | Status
                        //- span.required-label *
                      .col-lg-7.col-md-9.col-sm-8
                        .selectgroup.w-100
                          label.selectgroup-item
                            input.selectgroup-input(type='radio' value='active' checked=employee.status=="active" required)
                            span.selectgroup-button Active
                          label.selectgroup-item
                            input.selectgroup-input(type='radio' name='status' checked=employee.status=="inactive" value='inactive')
                            span.selectgroup-button Inactive

  script.
    $(document).ready(function () {
      $('#role').select2({
        placeholder: "Select Role",
        theme: "bootstrap",
        closeOnSelect: true
      });
    });