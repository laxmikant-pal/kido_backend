extends layout-admin

block content
  .main-panel
    .container
      .panel-header.bg-primary-gradient
        .page-inner.py-5
          .d-flex.align-items-left.align-items-md-center.flex-column.flex-md-row
            div
              h2.text-white.pb-2.fw-bold Add Permission
              h5.text-white.op-7.mb-2 Welcome to Admin Panel
            .ml-md-auto.py-2.py-md-0
              a.btn.btn-white.btn-border.btn-round.mr-2(href='/admin/uac/permission/all') All Permission(s)
              a.btn.btn-white.btn-border.btn-round.mr-2(href='/admin/dashboard') Dashboard
      .page-inner
        .row
          .col-md-12
            .card
              form(action="/admin/uac/permission/add", method="POST")
                .card-body
                  .form-group.row
                    label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='name')
                      | Permission Name
                      span.required-label *
                    .col-lg-7.col-md-9.col-sm-8
                      input#role.form-control(type='text', name='name', placeholder='Enter Permission Name', required='')
                  //-.form-group.form-show-validation.row
                      label.col-lg-3.col-md-3.col-sm-4.mt-sm-2.text-right(for='prod')
                        | Status
                      .col-lg-7.col-md-9.col-sm-8
                        .select2-input
                          select.form-control(name='status', required='')
                            option(value='active') Active
                            option(value='inactive') Inactive
                .card-action
                  .row
                    .col-md-12
                      button.btn.btn-color(type="submit") Add Permission